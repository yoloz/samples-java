<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="indi.yoloz.sample.mybatis.service.RoleTestDao">

    <resultMap type="indi.yoloz.sample.mybatis.entity.RoleTest" id="roleVOMap">
        <result property="id" column="id"/>
        <result property="relationId" column="relationId"/>
        <result property="userName" column="user_name"/>
        <result property="name" column="name"/>
        <result property="desc" column="description"/>
        <result property="code" column="code"/>
        <result property="service" column="service"/>
        <result property="pid" column="pid"/>
        <result property="creator" column="creator"/>
        <result property="gmtCreated" column="gmt_created"/>
        <result property="modifier" column="modifier"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

    <!--select查询语句-->
    <select id="search" resultMap="roleVOMap">
        select
        u.id as relationId ,u.user_name,r.id as id,r.name,r.description,r.service,r.pid,r.code
        from tb_user_role_relation u
        left JOIN tb_role r on u.role_id = r.id
        where u.is_deleted ='N' and r.is_deleted ='N'
        <if test="userName != null and userName !=''">
            and u.user_name=#{userName}
        </if>
        <if test="service != null and service !=''">
            and r.service=#{service}
        </if>
        <if test="roleId != null and roleId !=''">
            and r.id=${roleId}
        </if>
        <if test="roleName != null and roleName !=''">
            and r.name=#{roleName}
        </if>
        order by u.gmt_modified desc
        <if test="pageSize != null">
            limit ${start},${pageSize}
        </if>
    </select>

</mapper>

