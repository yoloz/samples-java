<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="indi.yoloz.sample.mybatis.service.IntegerTestDao">

    <resultMap id="integerTestMap" type="indi.yoloz.sample.mybatis.entity.IntegerTest">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="charint" jdbcType="CHAR" property="charInt"/>
    </resultMap>

    <!--select查询语句-->
    <select id="getList" resultMap="integerTestMap">
        select * from test.inttest
    </select>

    <!--使用了自增主键，并且需要获取插入后的主键值，可以使用 useGeneratedKeys 和 keyProperty 属性：-->
    <insert id="insertIntegerTest" parameterType="indi.yoloz.sample.mybatis.entity.IntegerTest" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO test.inttest (id,charint)
        VALUES (#{id}, #{charInt})
    </insert>

</mapper>
